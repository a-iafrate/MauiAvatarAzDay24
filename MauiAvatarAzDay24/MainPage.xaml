            <Entry x:Name="entrySentence"></Entry>
            <Button x:Name="buttonSpeak" Clicked="buttonSpeak_Clicked" Text="Speak from MAUI!!"></Button>
        </StackLayout>
        <WebView Grid.Row="1" x:Name="webViewAvatar" Source="basic.html" VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand">
                
            </WebView>
        
    </Grid>

</ContentPage>
